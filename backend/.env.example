# ملف المتغيرات البيئية للمشروع (Backend)
# انسخ هذا الملف إلى .env وقم بتعبئة القيم المناسبة

# وضع بيئة التطوير
NODE_ENV=development

# منفذ تشغيل الخادم
PORT=5002

# سطر الاتصال بقاعدة البيانات MongoDB
MONGO_URI=mongodb://127.0.0.1:27017/auctiondb

# مفتاح JWT السري (استخدم مفتاح قوي ومعقد)
JWT_SECRET=your_strong_and_secret_jwt_key_here_change_this_in_production

# رابط الواجهة الأمامية
FRONTEND_URL=http://localhost:5173

# إعدادات Cloudinary لرفع الصور
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
